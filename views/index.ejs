<% layout('layout') -%>
<% script('js/index.js') -%>

<div class="container center-block">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-md-offset-3 col-md-6">
            <h3>Получить информацию о ссылке</h3>
            <form id="searchForm" role="search">
                <div class="form-group">
                    <label class="sr-only" for="searchUrl">Сокращенная ссылка</label>
                    <input type="url" class="form-control" id="url" placeholder="Сокращенная ссылка" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-block">Поиск</button>
                </div>
            </form>
        </div>
        <div id="searchResult" class="col-xs-10 col-xs-offset-1 col-md-offset-3 col-md-6">
            <dl id="findedUrl" class="dl-horizontal hidden">
                <dt>Автор</dt>
                <dd id="author"></dd>

                <dt>Короткая ссылка</dt>
                <dd id="shortUrl"></dd>

                <dt>Полная ссылка</dt>
                <dd id="longUrl" class="short-text"></dd>

                <dt>Описание</dt>
                <dd id="description"></dd>

                <dt>Теги</dt>
                <dd id="tags"></dd>
            </dl>
            <div class="alert alert-danger hidden">

            </div>
        </div>
    </div>
</div>